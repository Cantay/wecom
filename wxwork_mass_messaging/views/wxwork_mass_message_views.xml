    <record model="ir.ui.view" id="view_wecom_mass_messaging_tree">
        <field name="name">wecom.mass_messaging.tree</field>
        <field name="res_model">wecom.mass_messaging</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="Messagings" sample="1">
                <field name="subject" attrs="{'readonly': [('state', 'in', ('sending', 'done'))]}"/>
                <field name="mailing_type" invisible="1"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="schedule_date" string="Scheduled" widget="remaining_days"/>
                <field name="sent_date" widget="date"/>
                <field name="state" decoration-info="state == 'draft' or state == 'in_queue'" decoration-success="state == 'sending' or state == 'done'" widget="badge"/>
                <field name="sent"/>

            </tree>
        </field>
    </record>

    <record id="wecom_mass_messaging_action_message" model="ir.actions.act_window">
        <field name="name">Messaging</field>
        <field name="res_model">wecom.mass_messaging</field>
        <!-- <field name="view_mode">kanban,tree,form,graph</field> -->
        <field name="view_mode">tree</field>
        <field name="domain">[('mailing_type', '=', 'mail')]</field>
        <!-- <field name="context">{
                    'search_default_assigned_to_me': 1,
                    'default_user_id': uid,
                    'default_mailing_type': 'mail',
            }</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new messaging
            </p>
        </field>
    </record>

    <menuitem name="Mass messaging" id="mass_wecom_messaging_menu_mass" parent="mass_wecom_messaging_menu_root" sequence="1" action="wecom_mass_messaging_action_message" groups="wxwork_mass_messaging.group_mass_wecom_messaging_user"/>


</odoo>