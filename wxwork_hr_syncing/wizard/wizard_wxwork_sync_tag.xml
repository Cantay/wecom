<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_wxwork_sync_tag_wizard" model="ir.ui.view">
            <field name="name">Sync tags</field>
            <field name="model">wizard.wxwork.tag</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sync users from employees" >
                    <separator string="Generate system users in batches from HR's Enterprise WeChat employees"/>
                    <group>
                        <div>
                            <div>
                                The Linux production server uses the following command to view real-time logs:
                            </div>
                            <div class="mt16 mb16" >
                                <kbd>tail -f /var/log/odoo/odoo-server.log</kbd>
                            </div>
                            <div>
                                If there is an error, please check the help file
                            </div>
                        </div>
                        
                    </group>
                         
                    <footer>
                        <button name="action_sync_tags" string="Synchronously Tags" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_actions_wxwork_tag_wizard" model="ir.actions.act_window">
            <field name="name">Sync tag </field>
            <field name="res_model">wizard.wxwork.tag</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_wxwork_sync_tag_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <record id="dialog_wxwork_contacts_sync_tag_result" model="ir.ui.view">
            <field name="name">Synchronize tag results</field>
            <field name="model">wizard.wxwork.tag</field>
            <field name="type">form</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Employees generation system user results" edit="false" create="false">
                    <group>
                        <group>
                            <field name="sync_tag_result"/>
                        </group>
                        <group>
                            <field name="create_date" string="Starting time"/>
                            <field name="times"/>
                            <field name="result"  />
                        </group>
                    </group>
                    <footer>
                        <!--<button string="关闭" class="btn-secondary" special="cancel"/>-->
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_wxwork_sync_tag_tree" model="ir.ui.view">
            <field name="name">Synchronization tag record list</field>
            <field name="model">wizard.wxwork.tag</field>
            <field name="arch" type="xml">
                <tree string="Synchronous recording" edit="false" create="false" delete="false">
                    <field name="sync_tag_result" string="System user generation"/>
                    <field name="times"/>
                    <field name="create_date" string="Starting time"/>
                </tree>
            </field>
        </record>

        <record id="open_view_wxwork_sync_tag_tree" model="ir.actions.act_window">
            <field name="res_model">wizard.wxwork.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wxwork_sync_tag_tree"/>
        </record>
    </data>
</odoo>