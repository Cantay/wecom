<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wxwork_notice_template_view_form">
            <field name="name">wxwork.notice.template.form</field>
            <field name="model">wxwork.notice.template</field>
            <!--<field name="type">form</field>-->
            <field name="arch" type="xml">
                <form string="模板">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                            <group>
                                <field name="model_id" required="1" options="{'no_create': True}"/>
                                <field name="model" invisible="1"/>
                            </group>
                        </div>
                        <notebook>
                            <page string="内容">
                                <group col="6">
                                    <group colspan="2">
                                        <field name="msgtype" widget="radio"/>
                                    </group>
                                    <group colspan="4">
                                        <field name="content" colspan="3"  widget="html" options="{'style-inline': true}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="通知设置">
                                <group>
                                    <field name="from_user" placeholder="覆盖发送者的企业微信ID"/>
                                    <field name="use_default_to"/>
                                    <field name="to_user" placeholder="消息接收者，多个接收者用‘|’分隔，最多支持1000个。特殊情况：指定为@all，则向该企业应用的全部成员发送"/>
                                    <field name="to_party" placeholder="部门ID列表，多个接收者用‘|’分隔，最多支持100个。当'到用户'为@all时忽略本参数"/>
                                    <field name="to_tag" placeholder="标签ID列表，多个接收者用‘|’分隔，最多支持100个。当'到用户'为@all时忽略本参数"/>
                                    <field name="agentid"/>
                                    <field name="safe"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wxwork_notice_template_view_tree">
            <field name="name">wxwork.notice.template.tree</field>
            <field name="model">wxwork.notice.template</field>
            <field name="arch" type="xml">
                <tree string="模板">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="from_user"/>
                    <field name="to_user"/>
                    <field name="to_party"/>
                    <field name="model_id"/>
                    <field name="msgtype"/>
                    <field name="safe"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wxwork_notice_template_view_search">
            <field name="name">wxwork.notice.template.search</field>
            <field name="model">wxwork.notice.template</field>
            <field name="arch" type="xml">
                <search string="模板">
                    <field name="model_id"/>
                </search>
            </field>
        </record>

        <record id="open_module_tree_notice_template" model="ir.actions.act_window">
            <field name="name">通知</field>
            <field name="res_model">wxwork.notice.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wxwork_notice_template_view_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    创建一个新模板
                </p>
                <p>

                </p>
            </field>
        </record>

        <menuitem id="menu_wxwork_notice" name="通知" parent="wxwork_base.menu_wxwork_root" sequence="40" />

        <menuitem id="menu_wxwork_notice_template" name="模板" parent="menu_wxwork_notice"
                  action="open_module_tree_notice_template" sequence="10"/>
    </data>
</odoo>