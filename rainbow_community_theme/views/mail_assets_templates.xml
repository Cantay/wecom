<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="_mail_assets_primary_variables" inherit_id="web._assets_primary_variables">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/rainbow_community_theme/static/src/scss/mail/variables.scss"/>
        </xpath>
    </template>

    <template id="mail_assets_backend" inherit_id="mail.assets_backend">
        <xpath expr="//link[@href='/mail/static/src/scss/discuss.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/rainbow_community_theme/static/src/scss/mail/discuss.scss"/>
        </xpath>
        <xpath expr="//link[@href='/mail/static/src/scss/composer.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/rainbow_community_theme/static/src/scss/mail/composer.scss"/>
        </xpath>
        <xpath expr="//link[@href='/mail/static/src/scss/thread.scss']" position="replace">
            <link rel="stylesheet" type="text/scss" href="/rainbow_community_theme/static/src/scss/mail/thread.scss"/>
        </xpath>
    </template>

</odoo>