<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="wxwork_base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='wxwork_info']//div[hasclass('o_settings_container')][last()]" position="after">
                    <h2 id="#wxwork_customer_service" class="d-flex justify-content-between" attrs="{'invisible': [('is_wxwork_organization','=',False)]}">
                        <span class="text-left"><i class="fa fa-headphones fa-lg" aria-label="Customer service settings"/>  Customer service settings</span>
                        <span class="text-right fa fa-angle-double-up" aria-label="GoTop"/> 
                    </h2>
                    <div class="row mt16 o_settings_container" attrs="{'invisible': [('is_wxwork_organization','=',False)]}">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-qrcode fa-lg" aria-label="Wechat customer service QR code"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="row mt8">
                                    <label for="customer_service_qrcode" class="col-md-5 o_light_label"/>
                                    <field name="customer_service_qrcode"   widget="image" class="float-left oe_avatar col-lg-5"/>
                                </div>
                                <div class="row">
                                    <div class="text-muted col-md-12">
                                        Use the enterprise wechat scanning code on the <a href="https://work.weixin.qq.com/kf/" target="_blank">wechat customer service official website</a> to open wechat customer service, which can be used after opening.
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>