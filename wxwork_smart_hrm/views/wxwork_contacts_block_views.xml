<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wxwork_contacts_block_tree" model="ir.ui.view">
            <field name="name">Enterprise wechat contacts block list</field>
            <field name="model">wxwork.contacts.block</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id" />
                    <field name="wxwork_id" />
                </tree>
            </field>
        </record>

        <record id="view_wxwork_contacts_block_form" model="ir.ui.view">
            <field name="name">Enterprise wechat contacts block form</field>
            <field name="model">wxwork.contacts.block</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="company_id" />
                        <field name="wxwork_id" />
                    </group> 
                    <footer>
                        <button name="get_name" string="Get user name" type="object" class="oe_highlight" />
                    </footer>
                </form>                
            </field>
        </record>

        <record id="open_view_wxwork_contacts_block_tree" model="ir.actions.act_window">
            <field name="name">Enterprise wechat contacts block list</field>
            <field name="res_model">wxwork.contacts.block</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wxwork_contacts_block_tree"/>
        </record>
    </data>
</odoo>