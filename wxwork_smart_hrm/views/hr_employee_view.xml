<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wxwork_hr_employee_form" model="ir.ui.view">
            <field name="name">wxwork employee form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='image_1920']" position="replace">
                    <field name="use_system_avatar" invisible="1"/>
                    
                    <field name="avatar" widget='image_url' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}' attrs="{'invisible': [('use_system_avatar', '=', True)]}"/>

                    <field name="image_1920" widget='image' class="oe_avatar" options='{"zoom": true, "preview_image":"image_128"}' attrs="{'invisible': [('use_system_avatar', '=', False)]}"/>
                </xpath>
                
                <xpath expr="//div[hasclass('oe_title')]//h1" position="after">
                    <label for="alias" class="oe_edit_only" attrs="{'invisible': [('is_wxwork_employee','=',False)]}"/>
                    <h2 attrs="{'invisible': [('is_wxwork_employee','=',False)]}">
                        <field name="alias" placeholder="Alias"/>
                    </h2>
                    <label for="english_name" class="oe_edit_only" attrs="{'invisible': [('is_wxwork_employee','=',False)]}"/>
                    <h2 attrs="{'invisible': [('is_wxwork_employee','=',False)]}">
                        <field name="english_name" placeholder="English Name"/>
                    </h2>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]//field[@name='category_ids']" position="attributes">
                    <attribute name="attrs">{'readonly': [('is_wxwork_employee', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="department_ids" widget="many2many_tags" string="Multiple departments"/>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page name="wxwork_settings" string="Enterprise WeChat settings" >
                        <group>
                            <group>
                                <field name="wxwork_id" />
                                <field name="is_wxwork_employee" widget="checkbox"/>
                                <field name="department_ids" widget="many2many_tags" />
                            </group>
                            <group>
                                <field name="qr_code" widget="image_url" class="oe_avatar"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="hr_kanban_view_employees" model="ir.ui.view">
           <field name="name">hr.employee.kanban</field>
           <field name="model">hr.employee</field>
           <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
           <field name="arch" type="xml">                
                <xpath expr="//field[@name='hr_icon_display']" position="after">
                    <field name="use_system_avatar"/>
                </xpath>                
                <xpath expr="//field[@name='image_128']" position="replace">
                    <field name="image_128" widget="image" class="o_kanban_image_fill_left" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}" attrs="{'invisible': [('use_system_avatar', '=', False)]}"/>

                    <field name="avatar" widget='image_url' width="95" height="95" className="mr16" options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}" attrs="{'invisible': [('use_system_avatar', '=', True)]}"/>
                </xpath>
                
           </field>
        </record>

        <record id="wxwork_hr_employee_tree" model="ir.ui.view">
            <field name="name">Enterprise WeChat employee list</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <!-- <field name="department_ids" widget="many2many_tags" /> -->
                    <!--<field name="wxwork_department"/>-->
                    <field name="is_wxwork_employee"/>
                </xpath>
            </field>
        </record>

        <record id="wxwork_hr_employee_tree2" model="ir.ui.view">
            <field name="name">wxwork_hr_employee_tree2</field>
            <field name="model">hr.employee</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="wxwork_id" />
                    <field name="department_id"/>
                    <field name="is_wxwork_employee"/>
                </tree>
            </field>
        </record>

        <record id="open_module_tree_employee" model="ir.actions.act_window">
            <field name="name">Enterprise WeChat employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <!--            <field name="domain">[('is_wxwork_employee','=',1)]</field>-->
            <field name="context">{}</field>
            <!--<field name="view_id" eval="False"/>-->
            <!--<field name="search_view_id" ref="view_employee_filter"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new employee.
                </p>
                <p>

                </p>
            </field>
        </record>

    </data>
</odoo>