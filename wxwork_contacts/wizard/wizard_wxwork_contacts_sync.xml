<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_wxwork_contacts_sync_wizard" model="ir.ui.view">
            <field name="name">企业微信通讯簿数据同步</field>
            <field name="model">wxwork.contacts.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="企业微信通讯簿数据同步" >
                    <separator string="从企业微信更新下载并更新本地 HR 和 USER"/>
                    <group>
                        <div>
                            首次同步因需要通过互联网下载企业微信用户头像和二维码，企业微信用户多的话很慢，容易造成超时，建议首次同步从同步图片开始。<br/>
                            若同步失败,请在配置中停用"允许同步企业微信图片"功能。<br/>
                            同时使用"Odoo加速计算器"配置odoo.conf。<br/>
                        </div>
                        <ul>
                            <li>生成User默认属于门户用户。</li>
                            <li>门户用户是免费用户，不占用系统资源。</li>
                            <li>需要在用户列表视图将转换成内部用户。</li>
                            <li>内部用户是付费账号，占用系统资源。</li>
                        </ul>
                    </group>
                    <footer>
                        <button name="action_sync_contacts" string="开始同步" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_actions_wxwork_contacts_wizard" model="ir.actions.act_window">
            <field name="name">数据同步</field>
            <field name="res_model">wxwork.contacts.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_form_wxwork_contacts_sync_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <record id="dialog_wxwork_contacts_sync_result" model="ir.ui.view">
            <field name="name">数据同步结果</field>
            <field name="model">wxwork.contacts.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="企业微信通讯簿数据同步情况" edit="false" create="false">
                    <group>
                        <group>
                            <field name="department_sync_result"/>
                            <field name="image_sync_result"/>
                            <field name="employee_sync_result"/>
                            <field name="leave_sync_result"/>
                            <field name="user_sync_result"/>
                            <field name="employee_binding_user_result"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="times"/>
                            <field name="result"  />
                        </group>
                    </group>
                    <footer>
                        <!--<button string="关闭" class="btn-secondary" special="cancel"/>-->
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_wxwork_contacts_sync_tree" model="ir.ui.view">
            <field name="name">数据同步记录列表</field>
            <field name="model">wxwork.contacts.wizard</field>
            <field name="arch" type="xml">
                <tree string="同步记录" edit="false" create="false" delete="false">
                    <field name="department_sync_result" string="部门同步"/>
                    <field name="image_sync_result" string="图片同步"/>
                    <field name="employee_sync_result" string="员工同步" />
                    <field name="leave_sync_result" string="离职员工同步"/>
                    <field name="user_sync_result" string="用户同步"/>
                    <field name="employee_binding_user_result" string="员工绑定用户"/>
                    <field name="times"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="open_view_wxwork_contacts_sync_tree" model="ir.actions.act_window">
            <field name="name">通讯录同步记录列表</field>
            <field name="res_model">wxwork.contacts.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wxwork_contacts_sync_tree"/>
        </record>
    </data>
</odoo>