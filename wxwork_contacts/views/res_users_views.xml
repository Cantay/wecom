<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wxwork_rew_users_tree" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <field name="userid"/>
                    <field name="is_wxwork_user"/>
                    <field name="share"/>
                </xpath>
            </field>
        </record>

        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page name="wxwork" string="企业微信" >
                        <group>
                            <field name="userid"/>
                            <field name="is_wxwork_user"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_users_search_inherit" model="ir.ui.view">
            <field name="name">res.users.search.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='no_share']" position="after">
                    <filter name="share" string="共享用户" domain="[('share','=',True)]"/>
                </xpath>
            </field>
        </record>

        <!--转换用户类型 wizard-->
        <record id="change_type_wizard_view" model="ir.ui.view">
            <field name="name">改变用户类型</field>
            <field name="model">change.type.wizard</field>
            <field name="arch" type="xml">
                <form string="改变用户类型">
                    <field name="user_ids"/>
                    <footer>
                        <button string="改变类型" name="change_type_button" type="object" class="btn-primary"/>
                        <button string="取消" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="change_type_wizard_user_tree_view" model="ir.ui.view">
            <field name="name">更改用户类型</field>
            <field name="model">change.type.user</field>
            <field name="arch" type="xml">
                <tree string="Users" editable="bottom" create="false" delete="false">
                    <field name="user_name" />
                    <field name="user_login" />
                    <field name="new_type" required="True"/>
                </tree>
            </field>
        </record>
        <act_window id="change_type_wizard_action"
            name="更改用户类型"
            src_model="res.users"
            res_model="change.type.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            groups="base.group_erp_manager"/>




        <record id="open_module_tree_user" model="ir.actions.act_window">
            <field name="name">用户</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="">{'default_is_wxwork_user':True}</field>
            <field name="domain">[('is_wxwork_user','=',1)]</field>
            <field name="context">{}</field>
            <!--<field name="view_id" eval="False"/>-->
            <!--<field name="search_view_id" ref="view_employee_filter"/>-->
            <!--<field name="search_view_id" ref="view_users_search_inherit"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new user.
                </p>
                <p>

                </p>
            </field>
        </record>
    </data>
</odoo>