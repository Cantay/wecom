<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reset_password" inherit_id="auth_signup.reset_password">

        <!--<xpath expr="//form//div//button[@type='submit']" position="after">-->
        <xpath expr="//form//div[@class='d-flex justify-content-between align-items-center small']" position="replace">
            <div class="clearfix oe_login_buttons">
                <div class="d-flex justify-content-between align-items-center small">
                    <a class="btn btn-primary btn-sm" href="/web/reset_password_wxwork">
                        <i class="fa fa-weixin"/>
                        企微内部一键重置
                    </a>
                    <a class="btn btn-primary btn-sm" href="/web/reset_password_wxwork_qr">
                        <i class="fa fa-qrcode"/>
                        企微外部扫码重置
                    </a>
                </div>
                <br/>
                <div class="d-flex justify-content-between align-items-center small">
                    <button type="submit" class="btn btn-primary btn-sm">Confirm</button>
                    <a t-if="not token" t-attf-href="/web/login?{{ keep_query() }}">Back to Login</a>
                    <a t-if="invalid_token" href="/web/login">Back to Login</a>
                </div>
            </div>
        </xpath>
    </template>

</odoo>