<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_users_form_simple_modif" model="ir.ui.view">
            <field name="name">企业微信重置密码</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="arch" type="xml">
                <xpath expr="//form//button[@name='preference_change_password']" position="after">
                    <button name="preference_wxwork_change_password" type="object" class="oe_link">
                        <i class="fa fa-weixin"/>
                        企微内部一键重置
                    </button>
                    <button name="preference_wxwork_qr_change_password" type="object" class="oe_link">
                        <i class="fa fa-qrcode"/>
                        企微外部扫码重置
                    </button>
                </xpath>
            </field>
        </record>

        <record id="res_users_view_form" model="ir.ui.view">
            <field name="name">发送密码重置指令到企业微信</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="auth_signup.res_users_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_reset_password']" position="after">
                    <button string="发送密码重置指令到企业微信"
                                type="object" name="action_wxwork_reset_password"
                                attrs="{'invisible': [('state', '!=', 'active')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>