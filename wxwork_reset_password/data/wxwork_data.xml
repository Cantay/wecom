<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--开启密码重置功能-->
        <function model="ir.config_parameter" name="set_param" eval="('auth_signup.reset_password', 'True')"/>

        <!-- 用户的企业微信重置密码通知模板 -->
        <record id="reset_password_email" model="wxwork.notice.template">
            <field name="name">企业微信: 重置密码</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="from_user">${('"%s" &lt;%s&gt;' % (user.wxwork_id))|safe}</field>
            <field name="to_user">${user.wxwork_id | safe}</field>
            <field name="to_party"></field>
            <field name="to_tag"></field>
            <field name="msgtype">textcard</field>
            <field name="title">重置密码通知</field>
            <field name="description" type="html">
<div class="normal">尊敬的 ${object.name},要求重置与此消息链接的系统帐户的密码。</div> <div class="highlight">您可以通过点击"修改"更改密码，该链接将在24小时内有效。</div>
            </field>
            <field name="btntxt">修改</field>
            <field name="url">${object.signup_url}</field>
            <field name="agentid">0000000</field>
            <field name="safe" eval="False"/>
        </record>
    </data>
</odoo>