<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="ShowPassword">
        <t t-if="widget.mode === 'readonly'">
            <span t-attf-class="  #{widget.className}" t-if="widget.mode === 'readonly'"/>
        </t>
        <div t-attf-class="input-group  #{widget.className}" t-if="widget.mode === 'edit'">
            <!-- t-att-autofocus="widget.attrs.autofocus"  autocomplete="new-password" autocomplete="off"-->

            <input class="form-control" type="password" autocomplete="new-password"
                t-att-name="widget.name"
                t-att-tabindex="widget.attrs.tabindex"                
                t-att-placeholder="widget.attrs.placeholder"
                t-att-readonly="widget.attrs.readonly"
                t-att-maxlength="widget.field.size" 
                t-att-id="widget.idForLabel" 
            />
            <div class="input-group-append">
                <span class="fa fa-eye-slash wxwork_show_password input-group-text" aria-hidden="true" style="cursor: pointer;"/>
            </div>
        </div>
    </t>

    <t t-name="ShowPasswordButton">
        <button class="btn btn-sm btn-primary wxwork_show_password">
            <span class="fa fa-eye-slash" /><span></span>
        </button>
    </t>
</templates>