<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Enterprise WeChat Material Management</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wxwork_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='wxwork_base']//div[hasclass('o_settings_container')][last()]" position="after" >
                    <h2 id="wxwork_material" class="d-flex justify-content-between">
                        <span class="text-left"><i class="fa fa-suitcase fa-lg" aria-label="Enterprise WeChat Material"/> Enterprise WeChat Material</span>
                        <span class="text-right fa fa-angle-double-up" aria-label="GoTop"/> 
                    </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-list-ol fa-lg" aria-label="Message Agentid"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="material_agentid"/>
                                <div class="row">
                                    <div class="text-muted col-md-12">
                                        Application Management→Application→Open the application that needs to be verified and authorized, copy 'AgentId'
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="material_agentid" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-key fa-lg" aria-label="Message Secret"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="material_secret"/>
                                <div class="row">
                                    <div class="text-muted col-md-12">
                                        Application Management→Application→Open the application that needs to be verified and authorized, copy 'Secret'
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="material_secret" widget="wxwork_password"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-key fa-lg" aria-label="Material access token"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="material_access_token"/>
                                <div class="row">
                                <!-- 在企业微信的后台获取应用"通讯录"信息时的重要票据,在通信时都需要携带此信息用于验证接口的访问权限。 -->
                                    <div class="text-muted col-md-12" id="material_access_token_text">
                                        
                                        <span style="color:orange;padding: 0px 16px;">
                                            <i class="fa fa-info-circle" aria-label="info" />
                                            The token has been cached and the system will automatically refresh the token.
                                        </span>

                                    </div>
        
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="material_access_token" style="word-break:break-all;width: 100%;border: 1px solid #ccc;border-top-style: none;border-right-style: none;border-left-style: none;" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>

   </data>
</odoo>