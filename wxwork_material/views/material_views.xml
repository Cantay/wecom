<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wxwork_material_form">
            <field name="name">wxwork.material.form</field>
            <field name="model">wxwork.material</field>
            <field name="arch" type="xml">
                <form>
                     <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="upload_media" string="Upload media files" type="object" icon="fa-upload" attrs="{'invisible': [('id','=',False)]}"/>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="type" />
                                <field name="temporary" force_save="1" attrs="{'readonly': [('type', '!=', 'image')]}"/>
                                 
                                <field name="img_file" filename="img_file_filenam" widget="binary" options="{'accepted_file_extensions': '.jpg,.png'}" attrs="{'invisible': [('type','!=','image')]}"/>
                                <field name="img_file_filenam" invisible="1"/> 
                                 
                                <field name="voice_file" filename="voice_file_filename" widget="binary" options="{'accepted_file_extensions': '.amr'}" attrs="{'invisible': [('type','!=','voice')]}"/> 
                                <field name="voice_file_filename" invisible="1"/> 

                                <field name="video_file" filename="video_file_filename" widget="binary" options="{'accepted_file_extensions': '.mp4'}" attrs="{'invisible': [('type','!=','video')]}"/> 
                                <field name="video_file_filename" invisible="1"/>

                                <field name="file_file" filename="file_file_filename" widget="binary" attrs="{'invisible': [('type','!=','file')]}"/> 
                                <field name="file_file_filename" invisible="1"/>
                            </group>
                            <group>
                                <field name="media_id"/>
                                <field name="img_url" widget="url" attrs="{'invisible': [('type','!=','image')]}"/>
                                <field name="created_at"/>
                            </group>
                        </group>
                     </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wxwork_material_tree">
            <field name="name">wxwork.material.tree</field>
            <field name="model">wxwork.material</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="temporary"/>
                    <field name="media_id"/>
                    <field name="img_url"/>
                    <field name="created_at"/>
                </tree>
            </field>
        </record>

        <record id="action_view_wxwork_material" model="ir.actions.act_window">
            <field name="name">Material</field>
            <field name="res_model">wxwork.material</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
    </data>

</odoo>