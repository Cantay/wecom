<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wxwork_message_send_form">
            <field name="name">wxwork.message.send.form</field>
            <field name="model">wxwork.message.sending</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <header>
                        
                    </header>
                    <sheet>
                        <label for="subject" class="oe_edit_only"/>
                        <h2><field name="subject"/></h2>
                        <group>
                            <field name="to_user" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="to_party" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="to_tag" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="wxwork_message_send_tree">
            <field name="name">wxwork.message.send.tree</field>
            <field name="model">wxwork.message.sending</field>
            <field name="arch" type="xml">
                <tree string="Sending List">
                    <field name="subject" />
                    <field name="to_user"/>
                    <field name="to_party"/>
                    <field name="to_tag"/>
                    <field name="use_templates"/>
                    <field name="msgtype"/>
                    <field name="enable_id_trans"/>
                    <field name="enable_duplicate_check"/>
                    <field name="duplicate_check_interval"/>
                </tree>
            </field>
        </record>

        <record id="action_view_wxwork_message_send" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">wxwork.message.sending</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>