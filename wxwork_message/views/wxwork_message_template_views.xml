<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wxwork_message_template_form">
            <field name="name">wxwork.message.template.form</field>
            <field name="model">wxwork.message.template</field>
            <field name="arch" type="xml">
                <form string="Message Templates">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <field name="ref_ir_act_window"/>
                            <!-- <field name="ref_ir_act_window" invisible="1"/> -->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1 class="oe_highlight"><field name="name" class="oe_highlight" required="1" readonly="1"/></h1>
                            <group>
                                <field name="model_id" required="1" options="{'no_create': True}"/>
                                <field name="model" invisible="1"/>
                                <field name="msgtype" />
                                <!-- <field name="msgtype" /> -->
                                <!-- <field name="enable_duplicate_check" /> -->
                            </group>
                        </div>
                         <notebook>
                            <page string="Content" name="content">
                                <label for="subject"/>
                                <h2 style="display: inline-block;"><field name="subject" placeholder="Subject (placeholders may be used here)"/></h2>
                                <field name="body_html" widget="text" options="{'style-inline': true}"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                            <page string="Message Configuration" name="message_configuration">
                                <group>
                                    <field name="message_from"
                                            placeholder="Override author's message"/>
                                    <field name="use_default_to"/>
                                    <field name="message_to" attrs="{'invisible': [('use_default_to', '=', True)]}"
                                            placeholder="Comma-separated recipient"/>
                                    <field name="partner_to" attrs="{'invisible': [('use_default_to', '=', True)]}"
                                            placeholder="Comma-separated ids of recipient partners"/>
                                    <field name="message_cc" attrs="{'invisible': [('use_default_to', '=', True)]}"
                                            placeholder="Comma-separated carbon copy recipients"/>
                                    <field name="reply_to"
                                            placeholder="Preferred reply address"/>
                                    <field name="scheduled_date" string="Scheduled Send Date"/>
                                </group>
                            </page>
                            <page string="Advanced Settings" name="advanced_settings">
                                <group>
                                    <field name="lang" placeholder="${object.partner_id.lang}"/>                                    
                                    <field name="safe"/>
                                    <field name="enable_id_trans"/>
                                    <field name="enable_duplicate_check"/>
                                    <field name="duplicate_check_interval"/>
                                    <field name="auto_delete"/>
                                    <field name="report_template" domain="[('model','=',model)]"/>
                                    <field name="report_name" attrs="{'invisible':[('report_template','=',False)]}"/>
                                </group>
                            </page>
                         </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="wxwork_message_template_tree">
            <field name="name">wxwork.message.template.tree</field>
            <field name="model">wxwork.message.template</field>
            <field name="arch" type="xml">
                <tree string="Message Templates">
                    <field name="name"/>
                    <!-- <field name="msgtype"/> -->
                    <field name="model_id"/>
                    <field name="subject"/>
                    <field name="message_from"/>
                    <field name="message_to"/>
                    <field name="partner_to"/>
                    <field name="report_name"/>
                </tree>
            </field>
        </record>

        <record id="view_wxwork_message_template_search" model="ir.ui.view">
           <field name="name">wxwork.message.template.search</field>
           <field name="model">wxwork.message.template</field>
           <field name="arch" type="xml">
               <search string="Message Templates">
                    <field name="name" filter_domain="['|', '|', '|',('name','ilike',self), ('report_name','ilike',self), ('subject','ilike',self), ('message_to','ilike',self)]" string="Templates"/>
                    <field name="lang"/>
                    <field name="model_id"/>
                    <group expand="0" string="Group by...">
                        <!-- <filter string="SMTP Server" name="smtpserver" domain="[]" context="{'group_by':'mail_server_id'}"/> -->
                        <filter string="Model" name="model" domain="[]" context="{'group_by':'model_id'}"/>
                    </group>
               </search>
           </field>
        </record>

        <record model="ir.actions.act_window" id="action_wxwork_message_template_tree_all">
            <field name="name">Message Template</field>
            <field name="res_model">wxwork.message.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wxwork_message_template_tree" />
            <field name="search_view_id" ref="view_wxwork_message_template_search"/>
        </record>
    </data>
</odoo>
