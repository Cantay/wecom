<?xml version="1.0"?>
<odoo>
    <data>        

        <record model="ir.ui.view" id="wxwork_jsapi_interface_tree">
            <field name="name">wxwork.jsapi.interface.tree</field>
            <field name="model">wxwork.jsapi.interface</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="function_name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="wxwork_jsapi_interface_form">
            <field name="name">wxwork.jsapi.interface.form</field>
            <field name="model">wxwork.jsapi.interface</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="function_name"/>
                            <field name="type"/>
                        </group>
                        <group col="4">
                            <field name="example" widget="html" options="{'style-inline': true}"/>
                        </group>
                        <group col="4">
                            <field name="description" widget="html" options="{'style-inline': true}"/>
                        </group>                        
                    </sheet>                    
                </form>
            </field>
        </record>

        <record id="action_view_wxwork_jsapi_interface" model="ir.actions.act_window">
            <field name="name">JSAPI Interface</field>
            <field name="res_model">wxwork.jsapi.interface</field>
            <field name="view_mode">tree,form</field>

        </record>
    </data>

</odoo>