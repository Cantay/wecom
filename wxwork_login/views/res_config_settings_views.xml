<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">企业微信验证授权</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wxwork_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='wxwork_base']//div[hasclass('o_settings_container')][last()]" position="after" >
                    <h2>身份验证授权</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-link fa-lg"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auth_redirect_uri"/>
                                <div class="row">
                                    <div class="text-muted col-md-12">
                                        地址格式为: http://xxx.xxx.com:端口号/web/login。<br/>
                                        企业微信不支持数字IP地址，请使用通过ICP备案的域名。<br/>
                                        如odoo地址使用了https协议443端口，请填写https协议头，如http://xxx.xxx.com:端口号/web/login
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="auth_redirect_uri" style="width: 100%;"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>


    </data>
</odoo>