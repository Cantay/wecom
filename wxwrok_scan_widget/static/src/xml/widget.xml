<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="WxworkScan">
        <t t-if="widget.mode === 'readonly'">
            <span t-if="widget.mode === 'readonly'"/>
        </t>
        <div t-attf-class="o_field_widget #{widget.className}" t-if="widget.mode === 'edit'">
            <div class="o_row">
                <input type="text" class="o_input_scan_code o_field_widget"
                       t-att-barcode_events="widget.nodeOptions.barcode_events"
                       t-att-tabindex="widget.attrs.tabindex"
                       t-att-autofocus="widget.attrs.autofocus"
                       t-att-placeholder="widget.attrs.placeholder"
                       t-att-id="widget.idForLabel"
                       t-att-name="widget.name"
                       t-att-readonly="widget.attrs.readonly"
                       t-att-maxlength="widget.field.size"
                />
                <button type="button" class="fa fa-camera btn btn-primary show_scan_code_camera"
                        tabindex="-1" draggable="false" aria-label="Open camera" title="Open camera"/>
                <img class="loading o_hidden" style="padding: 0;margin:0;height: 14px;" src="/wxwrok_scan_widget/static/src/img/loading-spinner-grey.gif"/>
            </div>
        </div>
    </t>
</templates>