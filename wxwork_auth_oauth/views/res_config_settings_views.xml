<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Enterprise WeChat base settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="wxwork_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='wxwork_base']/div[hasclass('o_settings_container')][last()]" position="after">
                    <h2 id="wxwork_oauth_" class="d-flex justify-content-between">
                        <span class="text-left"><i class="fa fa-sign-in fa-lg" aria-label="Application login authorization" /> Application login authorization</span>
                        <span class="text-right fa fa-angle-double-up" aria-label="GoTop"/> 
                    </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="module_wxwork_auth_oauth_patch_for_rainbow">
                            <div class="o_setting_left_pane">
                                <field name="module_wxwork_auth_oauth_patch_for_rainbow"  />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_wxwork_auth_oauth_patch_for_rainbow"/>
                                <div class="content-group mt16" id="module_pos_patch_for_rainbow">    
                                    <div class="mt16 text-warning"><strong>Save</strong> this page and come back here to set up the feature.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>

</odoo>