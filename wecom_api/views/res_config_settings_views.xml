<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">WeCom Contacts settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="wecom_base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='wecom_base']//div[@name='contacts_access_token']" position="after">
                    <div class="col-xs-12 col-md-12 o_setting_box" attrs="{'invisible': [('is_wecom_organization','=',False)]}">
                        <div class="o_setting_left_pane">
                            <i class="fa fa-lock fa-lg" aria-label="Contacts Configuration"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="contacts_app_config_ids"/>
                            <div class="row">
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="contacts_app_config_ids"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>