<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wecom_message_template_preview_form">
            <field name="name">wecom.message.template.preview.form</field>
            <field name="model">mail.template.preview</field>
            <field name="arch" type="xml">
                <form string="WeCom Message Preview">
                    <h3>Preview of <field name="mail_template_id" readonly="1" nolabel="1" class="oe_inline"/>
                    </h3>
                    <field name="no_record" invisible="1"/>
                    <div class="o_row">
                        <span>Choose an example <field name="model_id" readonly="1"/>
 record:</span>
                        <div>
                            <field name="resource_ref" class="oe_inline" options="{'hide_model': True, 'no_create': True, 'no_edit': True, 'no_open': True}" attrs="{'invisible': [('no_record', '=', True)]}"/>
                            <span class="text-warning" attrs="{'invisible': [('no_record', '=', False)]}">No records</span>
                        </div>
                    </div>
                    <p>Choose a language: <field name="lang" class="oe_inline ml8"/>
                    </p>
                    <field name="msgtype" invisible="1"/>
                    <hr/>
                    <label for="body_json" string="WeCom message Json content" attrs="{'invisible': ['|',('msgtype','=','mpnews'),('msgtype','=','markdown')]}"/>
                    <label for="body_markdown" string="WeCom message Markdown content" attrs="{'invisible': [('msgtype','!=','markdown')]}" />
                    <label for="body_html" string="WeCom message Html content" attrs="{'invisible': [('msgtype','!=','mpnews')]}"/>
                    <hr/>
                    <field name="body_json" widget="body_json" readonly="1" nolabel="1" options='{"safe": True}' attrs="{'invisible': ['|',('msgtype','=','mpnews'),('msgtype','=','markdown')]}"/>
                    <field name="body_markdown" widget="wecom_markdown" readonly="1" nolabel="1" options='{"safe": True}' attrs="{'invisible': [('msgtype','!=','markdown')]}" />
                    <field name="body_html" widget="html" nolabel="1" options='{"safe": True}' attrs="{'invisible': [('msgtype','!=','mpnews')]}"/>
                    <hr/>
                    <footer>
                        <button string="Discard" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wecom_message_template_preview_action" model="ir.actions.act_window">
            <field name="name">Template Preview</field>
            <field name="res_model">mail.template.preview</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wecom_message_template_preview_form"/>
            <field name="target">new</field>
            <field name="context">{'default_mail_template_id':active_id}</field>
        </record>

    </data>
</odoo>
