<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_wecom_apps_form" model="ir.ui.view">
            <field name="name">wecom.apps.form</field>
            <field name="model">wecom.apps</field>
            <field name="inherit_id" ref="wecom_api.view_wecom_apps_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='generate_service'][last()]" position="after">
                    <button class="btn-outline-info" name="generate_service" string="Generate message service" type="object" icon="fa-server" context="{'code': 'message'}" attrs="{'invisible': [('type_code','!=','message')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>