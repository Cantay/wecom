<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">企业微信全局设置</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside" >
                    <div class="app_settings_block" data-string="wxwork_base" string="企业微信"  data-key="wxwork_base" groups="base.group_system">
                        <!--<div id="top" class="row mt16 o_settings_container anchor_point"/>-->
                        <h2><i class="fa fa-weixin fa-lg"/>企业微信全局配置</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-info fa-lg"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="corpid"/>
                                    <div class="row">
                                        <div class="text-muted col-md-12">
                                            填写企业微信管理后台→"企业信息"→"企业ID"
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="corpid" style="width: 100%;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                        <div class="o_setting_left_pane">
                                            <field name="debug_enabled"/>
                                        </div>
                                        <div class="o_setting_right_pane">
                                            <label for="debug_enabled"/>
                                            <div class="row">
                                                <div class="text-muted col-md-12">
                                                    勾选，在IDE和日志中打印一些调试信息；
                                                    <br/>
                                                    用于调试
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="wxwork_config_settings_action" model="ir.actions.act_window">
            <field name="name">设置</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{ 'module' : 'wxwork_base'}</field>
        </record>

    </data>
</odoo>