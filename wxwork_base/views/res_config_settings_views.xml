        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Enterprise WeChat base settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside" >
                    <div class="app_settings_block" data-string="Enterprise WeChat" string="Enterprise WeChat"  data-key="wxwork_base" groups="base.group_system">

                        <widget name="res_config_wxwork_navigation_menu"/>                        

                        <h2 id="wxwork_global" class="d-flex justify-content-between">  
                            <span class="text-left">
                                <i class="fa fa-globe fa-lg" aria-label="Enterprise WeChat global settings"/> Enterprise WeChat Global Settings
                            </span>
                           
                            <widget name="res_config_wxwork_navigation_gobottom"/>                            
                        </h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="debug_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="debug_enabled"/>
                                    <div class="row">
                                        <div class="text-muted col-md-12">
                                            Check, print some debugging information in IDE and log;
                                            <br/>
                                            For debugging
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="img_path"/>
                                    <div class="row">
                                        <div class="text-muted col-md-12">
                                            The path used to save enterprise wechat pictures,<span class="text-danger">Need to have read and write permissions on the path.</span><br/>
                                            reference:Windows: D:\img\  <br/>
                                            Linuxï¼š/home/odoo/img/ Note: odoo is the current system account
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="img_path" required="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

