                        </div>

                        <h2 id="wxwork_companies" class="d-flex justify-content-between">
                            <span class="text-left"><i class="fa fa-building fa-lg" aria-label="Enterprise WeChat Companies" /> Enterprise WeChat Companies settings</span>
                            <widget name='res_config_wxwork_navigation_gotop'/>
                        </h2>
                        <div class="row mt16 o_settings_container" >
                            <div class="col-12 col-lg-6 o_setting_box" >
                                <div class="o_setting_left_pane">
                                    <field name="is_wxwork_organization"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_wxwork_organization" string="This company is an enterprise wechat organization"/>
                                    <div class="content-group mt8">
                                        <label for="company_name"/>
                                        <div class="mt4">
                                            <field name="company_name"/>
                                        </div>
                                    </div>
                                    <div class="content-group mt8">
                                        <label for="abbreviated_name"/>
                                        <span class="fa fa-lg fa-info-circle" title="The value set here is the company identified as enterprise wechat organization." />
                                        <div class="mt4" attrs="{'invisible': [('is_wxwork_organization','=',False)]}">
                                            <field name="abbreviated_name"/>
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box" >
                                <div class="o_setting_right_pane">
                                    <div class="content-group mt8">                                        
                                        <label for="corpid"/>
                                        <span class="fa fa-lg fa-info-circle" title="The value set here is the company identified as enterprise wechat organization." />
                                        <div class="mt4" attrs="{'invisible': [('is_wxwork_organization','=',False)]}">
                                            <field name="corpid" widget="wxwork_password"/>
                                        </div>
                                    </div>
                                    
                                    <hr/>
                                    <button name="open_wxwork_company" icon="fa-arrow-right" type="object" string="Update Info" class="btn-link"/> 
                                    <button name="%(base.action_res_company_form)d" icon="fa-arrow-right" type="action" string="Manage all companies" class="btn-link"/>
                                </div>
                            </div>
                        </div>

                        <div id="wxwork_bottom"/>
                    </div>            
                </xpath>
            </field>
        </record>

        <record id="wxwork_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{ 'module' : 'wxwork_base', 'bin_size': False}</field>
        </record>
    </data>
